            "properties": {},
            "features": {},
            "queueFamiliesProperties": []
        },
        "drm_device": {
            "extensions": {
                "VK_EXT_physical_device_drm": 1
            },
            "properties": {
                "VkPhysicalDeviceDrmPropertiesEXT": {
                    "hasRender": true
                }
            },
            "features": {},
            "queueFamiliesProperties": []
